                    <Button Click="viewInfo" Margin="5">FindUser</Button>
                    <Button Click="findPosts" Margin="5">SeePosts</Button>
                    <Button Margin="5">Follow</Button>
                </StackPanel>
            </MenuItem>
        </Menu>
