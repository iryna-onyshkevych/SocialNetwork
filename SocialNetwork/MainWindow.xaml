<Window x:Class="SocialNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialNetwork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid" Background ="Lavender">
        
        <Menu x:Name="tab"  Height="35" VerticalAlignment="Top" Background  ="Pink">
            <MenuItem Header="Find" Click="MenuItem_Click">
                <Label Content="Enter Name"></Label>
                <TextBox x:Name="Firstname" Width="259" Height="35" >
                </TextBox>
                <Label Content="Enter Surname"></Label>
                <TextBox x:Name="Lastname" Width="259" Height="35" >
                </TextBox>
                <Button Click="viewInfo" Margin="5" Height="31" Width="61" Background="FloralWhite">FindUser</Button>
                <StackPanel Orientation="Horizontal">
                    <Button Click="findPosts" Margin="5" Background="LightPink">SeePosts</Button>
                    <Button Click ="followUser" Margin="5" Background="LightPink">Follow</Button>
                    <Button Click ="likePost" Margin="5" Background="LightPink">Like</Button>
                    <Button Click ="addComment" Margin="5" Background="LightPink">Comment</Button>
                </StackPanel>
            </MenuItem>
            <MenuItem Header="Comment" Click="MenuItem_Click1">
            </MenuItem>
            
            <MenuItem Header="Create Post" Click="MenuItem_Click2">
            </MenuItem>
        </Menu>
        <TabControl x:Name="tab1" Background="AliceBlue"   Height="319" Margin="376,50,-0.4,50">
                <!--<Image Source="C:\Users\irini\OneDrive\Робочий стіл\1.jpg" Width="780" Height="900"></Image>-->
            <!--<TextBlock Margin="0,0,596,159.2" Background="DeepPink"></TextBlock>-->
            
        </TabControl>
        <!--<TextBox x:Name="posts1" Background="AliceBlue" Margin="0,35,-0.4,0" >
            
        </TextBox>-->
        
    </Grid>
</Window>
